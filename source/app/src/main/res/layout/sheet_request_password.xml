<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="a"
            type="q.sdm.ui.main.account.request.RequestPasswordSheet" />

        <variable
            name="vm"
            type="q.sdm.ui.main.account.request.RequestPasswordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/sheet_header_background"
        android:layout_height="match_parent">
        <TextView
            android:elevation="@dimen/_4sdp"
            android:background="@drawable/sheet_header_background"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/sfregular"
            android:textSize="@dimen/_16ssp"
            android:textColor="#292D32"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Cập nhật thông tin"
            android:id="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:elevation="@dimen/_5sdp"

            android:id="@+id/close"
            android:onClick="@{(v)->a.dismiss()}"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:src="@drawable/delete_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:paddingVertical="@dimen/_4sdp"
            android:background="#F2F3F2"
            android:paddingHorizontal="@dimen/_4sdp"
            android:id="@+id/message"
            android:text="Vui lòng nhập mật khẩu hiện tài để cập nhật thông tin"
            android:textColor="#424242"
            android:textSize="@dimen/_14ssp"
            style="@style/sfmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@id/message"
            android:id="@+id/password_title"
            android:text="Mật khẩu hiện tại"
            android:textColor="#666666"
            android:textSize="@dimen/_12ssp"
            style="@style/sfmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_marginHorizontal="@dimen/_14sdp"
            android:id="@+id/password_layer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/password"
                style="@style/sfmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:text="@={vm.password}"
                android:textColor="#424242"
                android:textSize="@dimen/_14ssp" />


            <View
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_below="@id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#E2E2E2"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="@{(v)->a.onClick(v)}"
            android:id="@+id/update_btn"
            android:background="@drawable/login_btn_active"
            android:layout_marginTop="@dimen/_25sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"

            android:layout_marginHorizontal="@dimen/_10sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginVertical="@dimen/_3sdp"
                android:text="Cập nhật tài khoản"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>