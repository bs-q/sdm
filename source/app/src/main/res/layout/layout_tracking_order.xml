<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.core.content.ContextCompat"  />

        <variable
            name="colorList"
            type="Integer[]" />
        <variable
            name="order"
            type="q.sdm.data.model.api.response.order.OrderHistoryDetailResponse" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#424242"
                style="@style/sfmedium"
                android:text="Trạng thái đơn hàng:"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                style="@style/sfmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@{`#`+order.ordersCode}"
                android:textColor="#424242"
                android:textSize="@dimen/_12ssp" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/linearLayoutCompat2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/wait"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_10sdp"
                    android:tint="@{ContextCompat.getColor(context,colorList[0])}"/>

                <TextView

                    android:textSize="@dimen/_10ssp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Mới tạo"
                    android:textColor="@{ContextCompat.getColor(context,colorList[0])}" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/stage_1"
                android:layout_marginHorizontal="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/linearLayoutCompat2"
                app:layout_constraintEnd_toStartOf="@id/linearLayoutCompat"
                android:background="@color/gray"
                android:backgroundTint="@{ContextCompat.getColor(context,colorList[1])}"
                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayoutCompat3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@id/linearLayoutCompat2"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:src="@drawable/confirm"
                    android:layout_gravity="center_vertical"
                    android:tint="@{ContextCompat.getColor(context,colorList[2])}"
                    />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Đã xác nhận"
                    android:textColor="@{ContextCompat.getColor(context,colorList[2])}" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/stage_2"
                android:layout_marginHorizontal="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/linearLayoutCompat"
                app:layout_constraintEnd_toStartOf="@id/linearLayoutCompat3"
                android:background="@color/gray"
                android:layout_width="0dp"
                android:backgroundTint="@{ContextCompat.getColor(context,colorList[3])}"

                android:layout_height="@dimen/_1sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/linearLayoutCompat3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayoutCompat4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/transport"
                    android:tint="@{ContextCompat.getColor(context,colorList[4])}"
                    />

                <TextView
                    android:textSize="@dimen/_10ssp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Vận chuyển"
                    android:textColor="@{ContextCompat.getColor(context,colorList[4])}" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:id="@+id/stage_3"
                android:layout_marginHorizontal="@dimen/_3sdp"
                app:layout_constraintStart_toEndOf="@id/linearLayoutCompat3"
                app:layout_constraintEnd_toStartOf="@id/linearLayoutCompat4"
                android:background="@color/gray"
                android:backgroundTint="@{ContextCompat.getColor(context,colorList[5])}"

                android:layout_width="0dp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayoutCompat4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/done"
                    android:tint="@{ContextCompat.getColor(context,colorList[6])}"
                    />

                <TextView
                    android:layout_marginStart="@dimen/_2sdp"
                    android:textSize="@dimen/_10ssp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Hoàn tất"
                    android:textColor="@{ContextCompat.getColor(context,colorList[6])}" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>