<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="a"
            type="q.sdm.ui.main.account.email.UpdateEmailActivity" />

        <variable
            name="vm"
            type="q.sdm.ui.main.account.email.UpdateEmailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/sheet_header_background"
        android:layout_height="match_parent">
        <TextView
            android:elevation="@dimen/_4sdp"
            android:background="@drawable/sheet_header_background"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/sfregular"
            android:textSize="@dimen/_16ssp"
            android:textColor="#292D32"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Email"
            android:id="@+id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:onClick="@{(v)->a.onClick(v)}"
            android:layout_width="0dp"
            android:elevation="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:id="@+id/done"
            android:textColor="@color/primary"
            style="@style/sfmedium"
            android:text="Hoàn tất"
            android:paddingVertical="@dimen/_2sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/header"
            android:textSize="@dimen/_12ssp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:id="@+id/password_title"
            android:text="Email"
            android:textColor="#666666"
            android:textSize="@dimen/_12ssp"
            style="@style/sfmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/password_layer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginEnd="@dimen/_14sdp"
                android:id="@+id/close"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignTop="@id/email"
                android:layout_alignBottom="@id/email"
                android:layout_alignParentEnd="true"
                android:elevation="@dimen/_5sdp"
                android:onClick="@{(v)->a.onClick(v)}"
                android:src="@drawable/delete_icon" />

            <EditText
                android:layout_marginStart="@dimen/_14sdp"
                android:id="@+id/email"
                style="@style/sfmedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/close"
                android:layout_marginVertical="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:text="@={vm.email}"
                android:textColor="#424242"
                android:textSize="@dimen/_14ssp" />


            <View
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_below="@id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="#E2E2E2"/>

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>