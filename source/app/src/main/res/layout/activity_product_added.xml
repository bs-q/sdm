<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="total"
            type="androidx.databinding.ObservableDouble" />
        <variable
            name="amount"
            type="androidx.databinding.ObservableInt" />
        <variable
            name="a"
            type="q.sdm.ui.main.cart.added.ProductAddedActivity" />

        <variable
            name="vm"
            type="q.sdm.ui.main.cart.added.ProductAddedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:elevation="@dimen/_4sdp"
            android:background="@color/white"
            android:paddingVertical="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            style="@style/sfregular"
            android:textSize="@dimen/_16ssp"
            android:textColor="#292D32"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Giỏ hàng"
            android:id="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:id="@+id/rv"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/bottom_layer"
            android:layout_marginVertical="@dimen/_8sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:elevation="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:id="@+id/bottom_layer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                app:layout_constraintBottom_toBottomOf="parent"
                android:onClick="@{(v)->a.onClick(v)}"
                android:id="@+id/checkout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/login_btn_active"
                android:orientation="vertical"
                android:layout_width="0dp"
                app:layout_constraintWidth_percent=".7"
                android:layout_height="@dimen/_34sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@{`Thanh toán: ` + @string/money_format(total)}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:onClick="@{(v)->a.onClick(v)}"
                android:id="@+id/cart_layer"
                android:background="@drawable/edit_quantity_background"
                android:layout_marginEnd="@dimen/_14sdp"
                app:layout_constraintEnd_toStartOf="@id/checkout"
                android:layout_height="@dimen/_34sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias=".45"
                    app:layout_constraintEnd_toStartOf="@id/cart_total"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    android:src="@drawable/cart_added"

                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:layout_marginStart="@dimen/_6sdp"
                    android:id="@+id/cart_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/sfbold"
                    android:textColor="#424242"
                    android:text="@{String.valueOf(amount)}"
                    app:layout_constraintStart_toEndOf="@id/cart_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>