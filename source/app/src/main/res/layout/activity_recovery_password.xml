<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="a"
            type="q.sdm.ui.recovery.RecoveryActivity" />

        <variable
            name="vm"
            type="q.sdm.ui.recovery.RecoveryViewModel" />
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/verify_image"
                android:src="@drawable/recovery_img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="@dimen/_195sdp"
                android:layout_height="@dimen/_195sdp"/>
            <TextView
                android:id="@+id/verify_title"
                app:layout_constraintTop_toBottomOf="@id/verify_image"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/sfbold"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_38sdp"
                android:text="Xác minh OTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/verify_message"
                app:layout_constraintTop_toBottomOf="@id/verify_title"
                android:layout_marginStart="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/sfregular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="Chúng tôi sẽ gửi cho bạn mã OTP trên email!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:textCursorDrawable="@drawable/cursor"
                android:paddingHorizontal="@dimen/_6sdp"
                android:text="@={vm.email}"
                android:background="@drawable/otp_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_14sdp"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:id="@+id/recovery_form"
                app:layout_constraintTop_toBottomOf="@id/verify_message"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                layout="@layout/layout_otp"/>


            <RelativeLayout
                android:clickable="@{vm.validEmail}"
                app:layout_constraintTop_toBottomOf="@id/recovery_form"
                android:onClick="@{(v)->a.onClick(v)}"
                android:id="@+id/verify_btn"
                android:background="@{!vm.validEmail ? @drawable/login_btn_inactive : @drawable/login_btn_active}"
                android:layout_marginTop="@dimen/_25sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_34sdp"
                android:layout_marginHorizontal="@dimen/_20sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:text="Tiếp tục"
                    android:textColor='@{!vm.validEmail ? @color/login_text_inactive : @color/login_text_active}'
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</layout>