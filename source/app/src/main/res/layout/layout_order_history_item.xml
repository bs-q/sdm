<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="defaultName"
            type="String" />
        <variable
            name="defaultPhone"
            type="String" />
        <import type="androidx.core.content.ContextCompat"  />
        <variable
            name="order"
            type="q.sdm.data.model.api.response.order.OrderHistoryResponse" />
    </data>

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="@dimen/_8sdp"
        android:elevation="@dimen/_1sdp"
        android:layout_margin="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_4sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintEnd_toStartOf="@id/order_code_layer"
                android:id="@+id/name_and_phone"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@{ContextCompat.getColor(context,order.getColor)}"
                style="@style/sfmedium"
                android:textSize="@dimen/_14ssp"
                android:text="@{(order.receiverName !=null ? order.receiverName : defaultName) + ` (`+ (order.receiverPhone!=null?order.receiverPhone:defaultPhone)+`)`}"
                />
            <TextView

                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:id="@+id/address"
                android:layout_width="0dp"
                app:layout_constraintEnd_toStartOf="@id/order_code_layer"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name_and_phone"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@{ContextCompat.getColor(context,order.getColor)}"
                style="@style/sfregular"
                android:textSize="@dimen/_11ssp"
                android:text="@{order.ordersAddress ?? `Mua tại cửa hàng`}"/>
            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="@{@string/money_format(order.ordersTotalMoney)}"
                app:layout_constraintTop_toBottomOf="@id/address"
                android:textSize="@dimen/_11ssp"
                android:textColor="@{ContextCompat.getColor(context,order.getColor)}"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/sfregular"
                app:layout_constraintEnd_toStartOf="@id/order_code_layer"
                android:layout_width="0dp"
                android:id="@+id/price"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="@{@string/order_date_format(order.createdDate)}"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:textSize="@dimen/_11ssp"
                android:textColor="@{ContextCompat.getColor(context,order.getColor)}"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/sfregular"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@id/order_code_layer"
                android:layout_width="0dp"
                android:id="@+id/time"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/order_code_layer"
                app:layout_constraintWidth_percent=".25"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="0dp"
                android:layout_height="0dp">
                <TextView
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/order_code"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@{ContextCompat.getColor(context,order.getColor)}"
                    style="@style/sfmedium"
                    android:textSize="@dimen/_12ssp"
                    android:text="@{`#`+order.ordersCode}"/>
                <TextView
                    android:layout_marginHorizontal="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@{ContextCompat.getColor(context,order.getColor)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/order_message"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:paddingVertical="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_4sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    style="@style/sfmedium"
                    android:textAlignment="center"
                    android:textSize="@dimen/_10ssp"
                    android:text="@{order.stateMessage}"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>