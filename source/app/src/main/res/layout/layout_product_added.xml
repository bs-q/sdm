<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="q.sdm.data.model.db.ProductEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/thumbnail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white"
            app:cardPreventCornerOverlap="true"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginEnd="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardBackgroundColor="@android:color/white"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp">
            <ImageView
                android:src="@color/white"
                android:scaleType="centerCrop"
                app:online_image="@{product.getProductThumbnail()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:text="@{product.name}"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_6sdp"
            android:textColor="#424242"
            style="@style/sfmedium"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_width="0dp"
            android:id="@+id/name"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/_4sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@drawable/product_added_price_background"
            android:text="@{@string/money_format(product.price*(((double)1)-(double)(product.sale/100)))}"
            android:layout_marginStart="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/thumbnail"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_11ssp"
            android:textColor="#424242"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="@dimen/_8sdp"
            style="@style/sfbold"
            android:layout_width="wrap_content"
            android:id="@+id/price"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>