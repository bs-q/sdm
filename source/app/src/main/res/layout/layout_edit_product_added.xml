<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="q.sdm.data.model.db.ProductEntity" />
        <variable
            name="quantity"
            type="androidx.databinding.ObservableInt" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/product_layer"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent=".7">
            <TextView
                android:text="@{product.name}"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_12ssp"
                android:textColor="#424242"
                style="@style/sfmedium"
                android:ellipsize="end"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_4sdp"
               android:text="@{@string/money_format(product.price)}"
                android:layout_marginStart="@dimen/_8sdp"
                android:textSize="@dimen/_11ssp"
                android:textColor="#424242"
                style="@style/sfmedium"
                android:layout_width="wrap_content"
                android:id="@+id/price"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:id="@+id/minus"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:layout_constraintStart_toEndOf="@id/product_layer"
            app:layout_constraintTop_toTopOf="@id/product_layer"
            app:layout_constraintBottom_toBottomOf="@id/product_layer"
            android:src="@drawable/added_minus"/>
        <TextView
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textColor="#424242"
            style="@style/sfbold"
            android:textSize="@dimen/_15ssp"
            android:maxLines="1"
            android:id="@+id/aec_quantity"
            android:text="@{String.valueOf(product.getObservableAmount())}"
            android:maxLength="2"
            app:layout_constraintTop_toTopOf="@id/minus"
            app:layout_constraintBottom_toBottomOf="@id/minus"
            app:layout_constraintStart_toEndOf="@id/minus"
            app:layout_constraintEnd_toStartOf="@id/plus"/>

        <ImageView
            android:layout_marginEnd="@dimen/_10sdp"
            android:id="@+id/plus"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_layer"
            app:layout_constraintBottom_toBottomOf="@id/product_layer"
            android:src="@drawable/added_plus"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="#337E8389"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>