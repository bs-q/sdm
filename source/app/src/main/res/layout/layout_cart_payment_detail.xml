<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/cart_payment_background"
        android:layout_width="match_parent"
        android:padding="@dimen/_6sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lcp_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cash"/>

        <TextView
            app:layout_constraintStart_toEndOf="@id/lcp_type"
            app:layout_constraintTop_toTopOf="@id/lcp_type"
            app:layout_constraintBottom_toBottomOf="@id/lcp_type"
            android:layout_marginStart="@dimen/_14sdp"
            android:id="@+id/lcp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#3C4858"
            android:text="Tiền mặt"
            android:textSize="@dimen/_12ssp"
            style="@style/sfmedium"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/lcp_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:rotation="90"
            android:layout_marginEnd="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/arrow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>